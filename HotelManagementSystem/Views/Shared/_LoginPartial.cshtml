@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav navbar-nav ms-auto mt-2 mt-lg-0">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form method="get" class="form-inline" asp-area="" asp-controller="LoginUsers" asp-action="LogOut">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
</ul>
