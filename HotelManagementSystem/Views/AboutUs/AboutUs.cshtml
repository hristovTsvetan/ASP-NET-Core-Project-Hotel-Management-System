                </tr>
                <tr class="table-success">
                    <td class="success text-center font-weight-bold">Hotel City: </td>
                    <td>@Model.HotelCity</td>
                </tr>
                <tr class="table-success">
                    <td class="success text-center font-weight-bold">Hotel Address: </td>
                    <td>@Model.HotelAddress</td>
                </tr>
                <tr class="table-success">
                    <td class="success text-center font-weight-bold">Hotel Phone: </td>
                    <td>@Model.HotelPhone</td>
                </tr>
                <tr class="table-success">
                    <td class="success text-center font-weight-bold">Hotel Email: </td>
                    <td>@Model.HotelMail</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>