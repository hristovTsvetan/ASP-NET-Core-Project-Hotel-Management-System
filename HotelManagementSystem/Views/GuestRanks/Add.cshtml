@model AddRankFormModel

@{
    ViewData["Title"] = "Add rank";
}

<div class="row">
    <h1 class="heading-margin text-center">Add rank</h1>
    <form class="col-md-4 offset-md-4 col-sm-12" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control">
            <span asp-validation-for="Discount" class="text-danger small"></span>
        </div>
        <input type="submit" value="Add" class="btn btn-primary col-md-4 offset-md-4 col-sm-4 offset-sm-4" />
    </form>
</div>