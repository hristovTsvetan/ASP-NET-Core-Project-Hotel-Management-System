@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="heading-margin text-center">Welcome to hotel management system</h4>
<div class="row col-md-4 offset-md-4 ">
    <p class="text-justify">
        <span class="text-info font-weight-bold">Additional information: </span>
        On this page you can inform yourself with common information, regarding number of Guest, Vouchers, Active reservations,
         Unpaid invoices, Check ins and Check outs for current day in the system.
    </p>
</div>

<div class="container bootstrap snippets bootdeys">
    <div class="row">
        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="yellow" data-radius="none">
                    <div class="content">
                        <h5 class="title">Guests in system</h5>
                        <p class="description">Total number: @Model.TotalGuests</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="brown" data-radius="none">
                    <div class="content">
                        <h5 class="title"><a href="#">Vouchers in system</a></h5>
                        <p class="description">Total number: @Model.TotalVouchers</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="purple" data-radius="none">
                    <div class="content">
                        <h5 class="title"><a href="#">Active reservations</a></h5>
                        <p class="description">Total number: @Model.TotalReservations</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="orange" data-radius="none">
                    <div class="content">
                        <h5 class="title">Unpaid <br />invoices</h5>
                        <p class="description">Total number: @Model.TotalUnpaidInvoices</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="blue" data-radius="none">
                    <div class="content">
                        <h5 class="title">Accommodations today (Check in)</h5>
                        <p class="description">Total number: @Model.TotalCheckIn</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="green" data-radius="none">
                    <div class="content">
                        <h5 class="title">Leavings today (Check out)</h5>
                        <p class="description">Total number: @Model.TotalCheckOut</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>
    </div>
</div>