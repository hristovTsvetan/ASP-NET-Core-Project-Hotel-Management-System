@model DetailsRoomViewModel

@{
    ViewData["Title"] = "Room details";
}

<div class="row col-md-8 offset-md-2 col-sm-12">
    <h4 class="heading-margin text-center">Details customer</h4>
    <div class="row col-md-6 offset-md-3 ">
        <p class="text-justify">
            <span class="text-danger font-weight-bold">Important: </span>If you delete client who has reservation which is not in the past,
            the reservation will change status automatically to canceled.
        </p>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Number"></label>
            <input asp-for="@Model.Number" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Floor"></label>
            <input asp-for="@Model.Floor" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4" disabled>
            <label asp-for="@Model.RoomType"></label>
            <input asp-for="@Model.RoomType" class="form-control" disabled>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.HotelName"></label>
            <input asp-for="@Model.HotelName" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.HasAirCondition"></label>
            <input asp-for="@Model.HasAirCondition" class="form-control" disabled>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control" rows="2" disabled></textarea>
        </div>
    </div>
    <div class="row editGuestBtn">
        <div class="form-group form-group col-md-6 offset-md-3 mt-5">
            <div class="container">
                <a class="btn btn-warning btn-lg ml-5 col-md-4 col-sm-12" asp-controller="Guests" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger btn-lg ml-5 col-md-4 col-sm-12" asp-route-id="@Model.Id" asp-controller="Guests" asp-action="Delete">Delete</a>
            </div>
        </div>
    </div>
</div>