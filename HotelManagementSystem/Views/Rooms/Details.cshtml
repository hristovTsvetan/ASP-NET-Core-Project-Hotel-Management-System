@model DetailsRoomViewModel

@{
    ViewData["Title"] = "Room details";
}

<div class="row col-md-8 offset-md-2 col-sm-12">
    <h4 class="heading-margin text-center">
        Details
        @(@Model.Number.ToLower().Contains("room") ? Model.Number : " Room " + Model.Number)
    </h4>
    <div class="row col-md-6 offset-md-3 ">
        <p class="text-justify">
            <span class="text-danger font-weight-bold">Important: </span>If you delete room who has reservations which start on date bigger or
            equal on today, all of these reservations will go from active to canceled status automatically.
        </p>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Floor"></label>
            <input asp-for="Floor" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4" disabled>
            <label asp-for="RoomType"></label>
            <input asp-for="RoomType" class="form-control" disabled>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="HotelName"></label>
            <input asp-for="HotelName" class="form-control" disabled>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="2" disabled></textarea>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="HasAirCondition"></label>
            <input asp-for="HasAirCondition" class="form-control" disabled>
        </div>
    </div>
    <div class="row editGuestBtn">
        <div class="form-group form-group col-md-6 offset-md-3 mt-5">
            <div class="container">
                <a class="btn btn-warning btn-lg ml-5 col-md-4 col-sm-12" asp-controller="Rooms" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger btn-lg ml-5 col-md-4 col-sm-12" asp-route-id="@Model.Id" asp-controller="Rooms" asp-action="Delete">Delete</a>
            </div>
        </div>
    </div>
</div>