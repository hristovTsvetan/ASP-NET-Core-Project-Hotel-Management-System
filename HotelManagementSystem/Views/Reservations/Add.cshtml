@model AddReservationFormModel

@{
    ViewData["Title"] = "Make reservation";
}

<div class="row col-12">
    <h4 class="heading-margin text-center">
        Create reservation
    </h4>
    <form method="get" col-md-6 offset-md-3 col-sm-12>
        <div class="row justify-content-center">
            <div class="form-group col-3 offset-1">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="text-danger small"></span>
            </div>
            <div class="form-group col-3 offset-1">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control">
                <span asp-validation-for="EndDate" class="text-danger small"></span>
            </div>
        </div>
        <input type="submit" value="Add" class="btn btn-success col-md-4 offset-md-4 col-sm-4 offset-sm-4" />
    </form>
</div>