@model AddReservationFormModel

@{
    ViewData["Title"] = "Make reservation";
}

<div class="row col-12">
    <h4 class="heading-margin text-center">
        Create reservation
    </h4>
    <form method="post">
        <div class="row col-12 justify-content-center">
            <div class="form-group col-3 offset-1">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>
        <div class="row col-12 justify-content-center">
            <div class="form-group col-3 offset-1">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="text-danger small"></span>
            </div>
            <div class="form-group col-2 offset-1">
                <input type="submit" class="btn-outline-dark btn-sm btn mt-4" asp-for="@Model.LoadRoomsButton" value="Load rooms">
            </div>
            <div class="form-group col-3 offset-1">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control">
                <span asp-validation-for="EndDate" class="text-danger small"></span>
            </div>
        </div>
        <div class="row col-12 justify-content-center">
            <div class="form-group col-3 offset-1">
                <label asp-for="SelectedRooms"></label>
                <select multiple="multiple" asp-for="SelectedRooms" asp-items="@Model.AvailableRooms" class="form-control" row="6">
                </select>
                <span asp-validation-for="SelectedRooms" class="text-danger small"></span>
            </div>
        </div>
        <input id="addReservation" type="submit" asp-for="AddReservationButton" value="Add" class="mt-5 btn btn-sm btn-success col-2 offset-5" />
    </form>
</div>
