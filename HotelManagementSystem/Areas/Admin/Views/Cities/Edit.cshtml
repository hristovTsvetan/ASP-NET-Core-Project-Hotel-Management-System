@model EditCityFormModel

@{
    ViewData["Title"] = "Edit city";
}

@await Html.PartialAsync("_NavMenuPartial")

<h4 class="heading-margin text-center">Edit city</h4>
<div class="row col-md-4 offset-md-4 ">
    <p class="text-justify">
        <span class="text-info font-weight-bold">Additional information: </span>
        If you change name on the selected city, all objects which has data as city will be updated automatically.
        System not allow to have two cities with the same name!
    </p>
</div>
<form method="post" class="col-md-4 offset-md-4 col-sm-12">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="PostalCode"></label>
        <input asp-for="PostalCode" class="form-control" />
        <span asp-validation-for="PostalCode" class="text-danger small"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Save" class="btn btn-warning col-md-4 offset-md-4 col-sm-4 offset-sm-4" />
</form>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}